# Flake8 configuration
# Balanced rules - not too strict

[flake8]
max-line-length = 100
max-complexity = 10

# Use 4 spaces for indentation
indent-size = 4

# Ignore some errors for flexibility
ignore =
    # Line too long - handled by max-line-length
    E501,
    # Whitespace before ':' - Black handles this
    E203,
    # Line break before binary operator - Black handles this
    W503,
    # Missing docstring in public module
    D100,
    # Missing docstring in public class
    D101,
    # Missing docstring in public method
    D102,
    # Missing docstring in public function
    D103,
    # Missing docstring in public package
    D104,
    # Missing docstring in magic method
    D105,
    # One-line docstring should fit on one line
    D200,
    # Use """triple double quotes"""
    D301,
    # First line should end with a period
    D400,
    # Imported but unused
    F401,
    # Star imports used
    F403,
    # Undefined name
    F405
    # Multi-line docstring summary should start at the first line
    D212
    # No blank lines allowed after function docstring
    D202
    # Missing docstring in __init__
    D107

# Exclude directories
exclude =
    .git,
    __pycache__,
    docs/source/conf.py,
    old,
    build,
    dist,
    .venv,
    venv,
    .tox,
    .eggs,
    *.egg,
    migrations,
    tests/fixtures


# Allow lambda expressions
extend-ignore = E731

# Count errors
count = True

# Show source code for errors
show-source = True

# Show statistics
statistics = True
