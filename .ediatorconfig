# EditorConfig helps maintain consistent coding styles

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.py]
indent_size = 4
max_line_length = 100

[*.{json,yaml,yml}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
max_line_length = 100

[Makefile]
indent_style = tab

[*.{js,jsx,ts,tsx,css,scss,html}]
indent_size = 2

[poetry.lock]
indent_size = 4
